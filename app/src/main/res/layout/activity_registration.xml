<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e1e6ff">
    <LinearLayout
        android:id="@+id/TopLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo4"
                android:padding="40dp"
                />
            <TextView
                android:gravity="left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="90dp"
                android:typeface="sans"
                android:text="JETAA Registration"
                android:id="@+id/title"
                android:paddingBottom="40dp"
                android:paddingTop="60dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <View style="@style/Divider" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".4">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="First Name"
                android:id="@+id/firstName"
                android:paddingLeft="80dp"
                />
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Last Name"
                android:id="@+id/lastName"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Email"
                android:id="@+id/email"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Phone Number"
                android:id="@+id/phone"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="State of Residence"
                android:id="@+id/State"
                android:paddingLeft="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".4"
            >
            <EditText
                android:inputType="text"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/firstNameInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>

            <EditText
                android:inputType="text"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/lastNameInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:id="@+id/emailInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="phone"
                android:id="@+id/phoneInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/StateSpinner"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".7">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/JETInfo"
            android:textSize="50dp"
            android:paddingTop="30dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <View style="@style/Divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".4">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="JET Position"
                android:id="@+id/JETPosition"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Departure City"
                android:id="@+id/DepartureCity"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Departure Year"
                android:id="@+id/DepartureYear"
                android:paddingLeft="80dp"
                android:inputType="number"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Year Completed JET"
                android:id="@+id/YearCompletion"
                android:paddingLeft="80dp"
                android:inputType="number"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Years on JET"
                android:id="@+id/Years"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Placement Prefecture"
                android:id="@+id/Prefecture"
                android:paddingLeft="80dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Placement City"
                android:id="@+id/PlacementCity"
                android:paddingLeft="80dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".4">

            <Spinner
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/PositionSpinner"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:id="@+id/DepartureCityInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:id="@+id/DepartureYearInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:id="@+id/YearCompletionInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/YearsSpinner"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:id="@+id/PrefectureInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:id="@+id/PlacementCityInput"
                android:background="@drawable/box"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".7">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/PNWJETInfo"
            android:textSize="50dp"
            android:paddingTop="30dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <View style="@style/Divider" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".2">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Are you interested in assisting with JET interviews?"
                    android:id="@+id/JETInterviews"
                    android:paddingLeft="80dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Are you interested in assisting with JET Program Pre-Departure Training?"
                    android:id="@+id/preDeparture"
                    android:paddingLeft="80dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Are you interested in assisting with JET Program Recruiting?"
                    android:id="@+id/JETRecruiting"
                    android:paddingLeft="80dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".6">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/JETInterviewsBool">
                    <RadioButton
                        android:id="@+id/InterviewYES"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="@string/yes"/>
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/InterviewNO"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="@string/no" />

                </RadioGroup>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/preDepartureBool">
                    <RadioButton
                        android:id="@+id/preDepartYES"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="@string/yes"/>
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/preDepartNO"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="@string/no"/>

                </RadioGroup>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/JETRecruitingBool">
                    <RadioButton
                        android:id="@+id/recruitYES"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="@string/yes"/>
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/recruitNO"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="@string/no"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".7">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/ConsulateInfo"
                android:textSize="50dp"
                android:paddingTop="30dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <View style="@style/Divider" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/ConsulateRequest"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <RadioGroup
            android:paddingLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ConsulateInfoBool">
            <RadioButton
                android:id="@+id/ConsulateYES"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="@string/ConsulateYes"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/ConsulateNO"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="@string/ConsulateNo" />

        </RadioGroup>
        </LinearLayout>
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="70dp">

    </RelativeLayout>
        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/submit"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:text="@string/submit"
            android:textSize="30dp"
            android:clickable="false"
            android:padding="20dp"
            android:background="@drawable/button_click"/>

    </RelativeLayout>
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>

